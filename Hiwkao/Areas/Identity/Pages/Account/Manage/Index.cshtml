@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>
    body {
        background-image: url("https://media.discordapp.net/attachments/1035127653205811261/1101187166232641737/IMG_0120.jpg?width=260&height=325");
        background-size: cover;
        backdrop-filter: blur(70px);
        background-repeat: repeat;
    }

    * {
        margin: 0;
        padding: 0;
        font-family: 'poppins',sans-serif;
    }

    .form-box {
        position: relative;
        width: 80%;
        height: 70%;
        backdrop-filter: blur(70px);
        display: flex;
        justify-content: center;
        background-size: cover;
    }

    .form-value { /* Fallback color */
        background-color: rgba(198, 198, 198, 0.15);
        height: 80vh;
        width: 30vw;
        display: flex;
        justify-content: center;
        border-radius: 20px;
    }

    .change {
        display: flex;
        justify-content: center;
    }

    img {
        border-radius: 50%;
        display: flex;
        justify-items: center;
    }

    .button {
        display: flex;
        justify-content: center;
    }

    button {
        padding: 1rem 3rem;
        background-color: #000;
        color: #fff;
        border-radius: 20px;
        width: fit-content;
    }

    .change {
        background: transparent;
        border-bottom: black solid 1px;
        border-radius: 0;
        border-top: none;
        border-left: none;
        border-right: none;
    }

    .box {
        display: flex;
        align-content: center;
        height: 100%;
    }

    .itext {
        height: 40%;
        width: 100%;
    }

</style>

<body>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="d-flex justify-content-center">
        <div class="form-box d-flex justify-self-center">
            <div class="form-value row d-flex justify-content-center">
                <div class="box col-md-6 d-flex align-content-center">
                    <!--<h2 class="text-center">@ViewData["Title"]</h2>-->
                    <form class="itext d-flex justify-content-center align-self-center" id="profile-form" method="post" enctype="multipart/form-data">
                        <div class="">
                            <div class="col-md-6 d-flex align-content-center">
                                <div class="form-group">
                                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                                    <input type="file" id="profilePictureInput" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Input.ProfilePicture" class="form-control" style="display: none" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" required />

                                    <div class="pic d-flex justify-self-center">
                                        <label for="profilePictureInput">
                                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover;border-radius:50%;" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                                        </label>
                                    </div>
                                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                                </div>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="textt">
                                <div class="change form-floating mb-3">
                                    <input asp-for="Input.FirstName" class="change form-control bg-transparent border-0" placeholder="Please choose your username." />
                                    <label asp-for="Input.FirstName" class="form-label"></label>
                                </div>
                                <div class="change form-floating mb-3">
                                    <input asp-for="Input.LastName" class="change form-control bg-transparent border-0" placeholder="Please choose your username." />
                                    <label asp-for="Input.LastName" class="form-label"></label>
                                </div>

                                <div class="change form-floating mb-3">
                                    <input asp-for="Input.PhoneNumber" class="change form-control bg-transparent border-0" placeholder="Please enter your phone number." />
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="button">
                                <button id="update-profile-button" type="submit" class="d-flex justify-content-center">Save</button>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
    </div>


</body>