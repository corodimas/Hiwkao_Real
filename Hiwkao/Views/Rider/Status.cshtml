@model Hiwkao.Models.OrderStoreViewModel;
@using Microsoft.AspNetCore.Identity
@using SampleLogin.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/css/Import.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

<style>
    * {
        font-family: 'poppins',sans-serif;
    }

    body {
        background-image: url("https://cdn.discordapp.com/attachments/874217207360520203/1101567480050237621/0f024adf359d7b313e9e8c2472a0109c.jpg");
        background-size: cover;
        background-color: rgba(0,0,0,0.5);
        -webkit-backdrop-filter: blur(70px);
        backdrop-filter: blur(70px);
        background-repeat: repeat;
    }

    .main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        margin-left: 10%;
        display: flex;
        margin-top: 4%;
        width: 80%;
        height: 40%;
        box-shadow: 0px 0px 20px rgba(255,255,255, 0.3);
        background-color: rgba(35, 43, 43, 0.25);
        border-radius: 30px;
        border: none;
        background-size: 0px;
    }

        .card .center {
            display: flex;
            margin-bottom: 2%;
        }

            .card .center .coll {
                display: flex;
                flex-direction: column;
                margin: 2%;
                width: 100%;
            }

                .card .center .coll .roww {
                    display: flex;
                    flex-direction: row;
                    justify-content: center;
                    width: 100%;
                    margin-top: 5rem;
                    gap: 5%;
                }

    .head {
        margin-left: 6rem;
        font-size: 5rem;
    }

    h3 {
        text-align: center;
    }

    img {
        display: flex;
        align-items: center;
        width: 15rem;
        height: 15rem;
        border-radius: 50%;
    }

    .button-green {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 20%;
        height: fit-content;
        background-color: rgb(66, 156, 66);
        color: white;
        border-radius: 40px;
        padding: 0.8rem 2.5rem;
        text-decoration: none;
        margin: 2%;
        border:none;
        font-size:150%;
    }
    .button-green:hover{
            background-color: rgb(0, 128, 0);
        }

    .button-red {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 20%;
        height: fit-content;
        background-color: rgb(204, 0, 0);
        color: white;
        border-radius: 40px;
        padding: 0.8rem 2.5rem;
        text-decoration: none;
        margin: 2%;
        border:none;
        font-size: 150%;
    }

    .button-red:hover {
        background-color: rgb(153, 0, 0);
        color: white;
    }

    .butcen a {
        display: flex;
        justify-content: center;
        align-self: center;
    }

    .button i {
        margin: 0.1rem;
    }

    .btn {
        width: 40vh;
        justify-content: center;
        margin: 10 auto;
        font-size: 150%;
        border-radius: 30px;
    }



    a {
        text-decoration: none;
    }

    .row .widtho {
        width: 7%
    }

        .row .widtho .nav .nav-item {
            width: 100%;
            height: 20%;
            background-color: transparent;
        }

    .nav-link {
        color: black;
    }

    .heado {
        background-color: rgb(40, 69, 1);
        border-radius: 20px 20px 0 0px;
        width: 100%;
        color: white;
        text-align: 2rem;
    }

    ion-icon {
        color: white;
        display: flex;
    }

        ion-icon:hover {
            color: black;
            transform: scale(1.5);
        }

        ion-icon.black-icon {
            color: black;
            transform: scale(1.2);
            background-color: white;
            border-radius: 5px;
        }

    .text-none {
        display: none;
    }

    ion-icon:hover + .text-none {
        margin-top: 2%;
        display: block;
    }

    @@media (max-width: 1023px) {
        body {
            background-image: url("https://i.pinimg.com/564x/0f/02/4a/0f024adf359d7b313e9e8c2472a0109c.jpg");
            background-size: cover;
            backdrop-filter: blur(70px);
            background-repeat: no-repeat;
        }

        .main {
            display: flex;
            flex-direction: column;
        }

        .card {
            display: flex;
            flex-direction: column;
            width: 80%;
        }

        .main .card {
            padding: 3rem 0.5rem;
            margin-bottom: 3%;
            margin-left: 8%;
            width: 100%;
            background-color: rgba(198, 198, 198, 0.15);
            background-size: 0px;
            border-radius: 60px;
        }
    }
</style>
<body>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <div class="row">
        <div class="col-md-3 widtho">
            <ul class="nav nav-pills flex-column k">
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><ion-icon size="large" name="home-outline"></ion-icon><div class="text-none">Home</div></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Rider" asp-action="Index"><ion-icon  size="large" name="bicycle-outline"></ion-icon><div class="text-none">Incoming</div></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Rider" asp-action="Status"><ion-icon class="black-icon" size="large" name="fast-food-outline"></ion-icon><div class="text-none">Status</div></a></li>
                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><ion-icon size="large" name="settings-outline"></ion-icon><div class="text-none">Manage</div></a>
                </li>

                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link text-dark border-0"><ion-icon size="large" name="exit-outline"></ion-icon><div class="text-none">Logout</div></button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="main">
                <div class="head">⏳ Status</div>
                @if (!Model.Orders.Any())
                {
                    <h1 style="margin-top:25%">There are no ongoing orders to deliver at this time</h1>
                }
                @foreach (var order in Model.Orders)
                {
                    
                    var store = @Model.Stores.FirstOrDefault(s => s.name == order.StoreName);
                    if (order.Status != "Sucess")
                    {
                        <div class="card">
                            <div class="center">
                                <div class="coll">
                                    <div class="roww text-center">
                                        <h1><strong>Order ID : @order.OrderId</strong></h1>
                                    </div>
                                    <div class="roww text-center">
                                        <img src="@store.StoreImage">
                                    </div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var menu = (string)typeof(Order).GetProperty("Menu" + i).GetValue(order);
                                        var amount = (int)typeof(Order).GetProperty("Amount" + i).GetValue(order);
                                        if ((amount > 0 && menu != "No"))
                                        {
                                            <div class="roww">
                                                <h3>Menu : @menu</h3>
                                                <h3>Amount : @amount</h3>
                                            </div>
                                        }
                                    }
                                    @{
                                        var userod = UserManager.Users.FirstOrDefault(u => u.Id == order.UserId);
                                        
                                    }
                                    <div class="roww">
                                        <h3>Location : @order.Destination</h3>
                                        <h3>Customer : @userod.FirstName @userod.LastName</h3>
                                        <h3>Telephone :  0-@userod.PhoneNumber</h3>
                                    </div>
                                    @if (order.Status == "Ongoing")
                                    {
                                        <div class="butcen"> <a class="" asp-controller="Rider" asp-action="Finish" asp-route-id="@order.OrderId"><button class='button-green'>Success</button></a></div>
                                        <div class="butcen"><a class="" asp-controller="Rider" asp-action="Cancel" asp-route-id="@order.OrderId"><button class='button-red'>Cancel</button></a></div>
                                    }
                                    else
                                    {
                                        <div class="roww"> <p>@order.Confirmation / 2 Waiting for customer comfirmation</p></div>
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                    }
                }



            </div>
        </div>
    </div>

</body>