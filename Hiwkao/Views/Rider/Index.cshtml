@model Hiwkao.Models.OrderStoreViewModel
@using Microsoft.AspNetCore.Identity
@using SampleLogin.Areas.Identity.Data
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" type="text/css" href="~/css/Import.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<style>
    * {
        font-family: 'poppins',sans-serif;
    }

    body {
        background-image: url("https://cdn.discordapp.com/attachments/874217207360520203/1101567480050237621/0f024adf359d7b313e9e8c2472a0109c.jpg");
        background-size: cover;
        backdrop-filter: blur(150px);
        background-repeat: no-repeat;
    }

    .main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        margin-left: 10%;
        display: flex;
        margin-top: 4%;
        width: 80%;
        height: 40%;
        box-shadow: 0px 0px 20px rgba(0,0,0, 0.3);
        background-color: rgba(255,255,255, 0.25);
        border-radius: 30px;
        border: none;
        background-size: 0px;
        flex-direction: column;
        justify-contentcontent: center;
    }

        .card .center {
            margin-top: 0%;
            display: flex;
            flex-direction: column;
            justify-contentcontent: center;
            margin-bottom: 2%;
        }

            .card .center .coll {
                display: flex;
                flex-direction: row;
                justify-content: center;
                margin: 2%;
            }

                .card .center .coll .roww {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    margin-left: 1rem;
                    margin-top: 5rem;
                }

    .head {
        background-color: rgb(0, 26, 0);
        border-radius: 20px 20px 0 0px;
        width: 100%;
        height: 100%;
        padding: 2%;
        color: white;
        opacity: 70%;
        text-align: center;
    }

    h1 {
        text-align: center;
    }

    img {
        display: flex;
        align-items: center;
        width: 12rem;
        height: 12rem;
        border-radius: 50%;
    }

    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        width: fit-content;
        background-color: rgb(204, 0, 0);
        color: white;
        font-size: 150%;
        border-radius: 10px;
        padding: 0.8rem 2.5rem;
        text-decoration: none;
        border-radius: 30px;
    }

        .button:hover {
            background-color: rgb(153, 0, 0);
            color: white;
        }

    a {
        text-decoration: none;
        color: white;
    }

    .butcen {
        display: flex;
        justify-content: center;
        align-self: center;
    }

    .button i {
        margin: 0.1rem;
    }

    .row {
    }

        .row .widtho {
            width: 7%;
        }



            .row .widtho .nav .nav-item {
                width: 100%;
                height: 20%;
                background-color: transparent;
            }

    .nav-link {
        color: black;
    }


    @@media (min-width: 768px) and (max-width: 1025px) {
        body {
            background-image: url("https://i.pinimg.com/564x/0f/02/4a/0f024adf359d7b313e9e8c2472a0109c.jpg");
            background-size: contain;
            backdrop-filter: blur(70px);
        }

        .main {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .card {
            width: 80%;
            height: 60%;
        }

            .card .center .coll {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

        img {
            border-radius: 50%;
        }
    }

    ion-icon {
        color: white;
        display: flex;
    }

        ion-icon:hover {
            color: black;
            transform: scale(1.5);
        }

        ion-icon.black-icon {
            color: black;
            transform: scale(1.2);
            background-color: white;
            border-radius: 5px;
        }

    .text-none {
        display: none;
    }

    ion-icon:hover + .text-none {
        margin-top: 2%;
        display: block;
    }

    .text-h2 {
        margin-left: 5%;
    }
</style>
<body>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <div class="row">
        <div class="col-md-3 widtho">
            <ul class="nav nav-pills flex-column ">
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><ion-icon size="large" name="home-outline"></ion-icon><div class="text-none">Home</div></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Rider" asp-action="Index"><ion-icon class="black-icon" size="large" name="bicycle-outline"></ion-icon><div class="text-none">Index</div></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Rider" asp-action="Status"><ion-icon size="large" name="fast-food-outline"></ion-icon><div class="text-none">Status</div></a></li>

                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><ion-icon size="large" name="settings-outline"></ion-icon><div class="text-none">Manage</div></a>
                </li>

                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><ion-icon size="large" name="exit-outline"></ion-icon><div class="text-none">Logout</div></button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="main">
                @foreach (var order in Model.Orders)
                {
                    var store = @Model.Stores.FirstOrDefault(s => s.name == order.StoreName);
                    <div class="card">
                        <div class="center">
                            <div class="head"><h3>Order</h3></div>
                            <div class="text-center pt-3 text-h2"><h2>@order.StoreName</h2></div>
                            <div class="coll">
                                <div class="roww w-25"><img src="@store.StoreImage"></div>

                                @{
                                    int count = 0; // declare the count variable outside of the loop
                                }
                                @for (int i = 1; i <= 5; i++)
                                {

                                    var menu = (string)typeof(Order).GetProperty("Menu" + i).GetValue(order);
                                    var amount = (int)typeof(Order).GetProperty("Amount" + i).GetValue(order);
                                    if (amount > 0 && count <= 3)
                                    {

                                        <div class="showmenu roww w-25">
                                            <h4>Menu : @menu</h4>
                                            <h4>Amount : @amount</h4>
                                        </div> 
                                        count++;
                                    }

                                }
                                @if (count > 3)
                                {
                                    <p>...</p>
                                }
                                <div class='roww w-25'>
                                    <h4>Location : @order.Destination</h4>
                                    <h4>Status : @order.Status</h4>
                                </div>
                                <div class="roww">
                                    <a asp-controller="Rider" asp-action="Accept" asp-route-id="@order.OrderId" asp-method="post"><button class="button">Accept</button></a>
                            </div> 
                        </div> 
                        </div>
                    </div>







                    <br />
                }



            </div>
        </div>
    </div>

</body>